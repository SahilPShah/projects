module keycode_reader(input logic [31:0] keycode, 
							 output logic w_on, a_on, s_on, d_on, space_on);
							 
							 
			//look up
			assign w_on = (keycode[31:24] == 8'h1A |
               keycode[23:16] == 8'h1A |
               keycode[15: 8] == 8'h1A |
               keycode[ 7: 0] == 8'h1A); 
			
			//look/move left
			assign a_on = (keycode[31:24] == 8'h04 |
               keycode[23:16] == 8'h04 |
               keycode[15: 8] == 8'h04 |
               keycode[ 7: 0] == 8'h04);
				
			//roll button
			assign s_on = (keycode[31:24] == 8'h16 |
               keycode[23:16] == 8'h16 |
               keycode[15: 8] == 8'h16 |
               keycode[ 7: 0] == 8'h16);
			
			//look/move right
			assign d_on = (keycode[31:24] == 8'h07 |
               keycode[23:16] == 8'h07 |
               keycode[15: 8] == 8'h07 |
               keycode[ 7: 0] == 8'h07);
				
			// jump up (should have a max limit set at some point)
			assign j_on = (keycode[31:24] == 8'h2c |
               keycode[23:16] == 8'h2c |
               keycode[15: 8] == 8'h2c |
               keycode[ 7: 0] == 8'h2c);
			
			
endmodule
